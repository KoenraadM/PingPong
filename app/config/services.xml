<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/controllers.xml"/>
        <import resource="services/repositories.xml"/>
    </imports>

    <services>
        <service id="app.dto_view_transformer" class="PingPongBundle\Infrastructure\DTOViewTransformer">
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
        </service>
        <service id="app.exception_catcher" class="PingPongBundle\Infrastructure\ExceptionTransformer">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelView" />
        </service>
    </services>
</container>